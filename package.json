{
  "name": "remix-postcss",
  "version": "1.0.0",
  "description": "Use your PostCSS Config in Remix",
  "main": "src/main.ts",
  "repository": "https://github.com/github:l-mbert/remix-postcss",
  "author": "Lambert Weller",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "tsup-node"
  },
  "dependencies": {
    "@remix-run/node": "^1.0.4",
    "postcss-load-config": "^3.1.0"
  },
  "peerDependencies": {
    "postcss": ">=8"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.3.0",
    "postcss": "^8.4.0",
    "remix": "^1.0.5",
    "tsup": "^5.9.1",
    "typescript": "^4.5.2"
  },
  "tsup": {
    "target": "node16",
    "entryPoints": [
      "src/main.ts"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "dts": true
  },
  "types": "dist/main.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "require": "./dist/main.js"
    }
  }
}
